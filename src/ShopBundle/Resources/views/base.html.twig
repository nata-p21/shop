    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path("homepage") }}">logo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path("homepage") }}">Главная <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Каталог</a>
                        {{ render(controller('ShopBundle:Default:menuSections')) }}
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("contacts") }}">Обратная связь</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Администрирование</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="{{ path("sectionsAdmin") }}">Категории</a>
                                <a class="dropdown-item" href="{{ path("productsAdmin") }}">Товары</a>
                                <a class="dropdown-item" href="{{ path("ordersAdmin") }}">Заказы</a>
                                <a class="dropdown-item" href="{{ path("feedbackAdmin") }}">Обратная связь(результы)</a>
                            </div>
                        </li>
                    {% endif %}

                </ul>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn pull-left btn-primary" href="{{ path("fos_user_security_logout") }}">Выйти</a>
            {% endif %}
        </nav>

    </header>


