{% extends '@Shop/base.html.twig' %}
{% block content %}
    <h1>{{ section.name }}</h1>

    <div class="container">
        <div class="row">

            {% for product in products %}
                <div class="col-md-3">
                    <a href="{{ path('product',{'code' : product.code}) }}"><img class="img-thumbnail" src="{{ product.picture }}"></a>
                    <p><a href="{{ path('product',{'code' : product.code}) }}">{{ product.name }}</a></p>
                    <p>{{ product.price|number_format(2, '.', ' ') }} руб.</p>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}